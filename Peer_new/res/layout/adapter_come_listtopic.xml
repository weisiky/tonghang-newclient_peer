<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/ll_click"
    android:background="@color/white"
    android:orientation="vertical" >
    <RelativeLayout 
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/list_topic_rel">
        <TextView 
            android:id="@+id/tv_time"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@+id/tv_skill"
            android:layout_alignLeft="@+id/tv_skill"
            android:textSize="@dimen/textsize_smallmiddle"
            android:text="2015/01/03"
            />
        

        <com.peer.utils.RoundImageView
            android:id="@+id/head"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/tv_time"
            android:layout_alignParentRight="true"
            android:layout_marginRight="22dp"
            android:background="@drawable/find_label_press"
            />

        <TextView
            android:id="@+id/tv_skill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:textSize="@dimen/textsize_smallmiddle"
            android:text="android"
             />
        
        
    </RelativeLayout>
    
    <RelativeLayout 
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">
		    <TextView 
		        android:id="@+id/tv_topic"
		        android:layout_height="wrap_content"
		        android:layout_width="wrap_content"
		        android:ellipsize="end"
		        android:maxLines="5"
		        android:layout_marginLeft="8dp"
		        android:layout_marginTop="10dp"
		        android:text="关于android讨论"
		        android:textColor="@color/deepgray"
		        android:textSize="@dimen/textsize_smallmiddle"
		        
		        />
		    <View 
		        android:layout_width="match_parent"
		        android:layout_height="0.5dp"
		        android:layout_below="@+id/tv_topic"
		        android:layout_marginTop="8dp"
		        android:background="@color/gray"
		        />
	</RelativeLayout>

</LinearLayout>



