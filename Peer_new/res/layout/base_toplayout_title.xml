<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/widgeheight" >

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@color/title_backcolor" >

        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_back"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_back_search"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/icon_back" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_large" />

        <LinearLayout
            android:id="@+id/ll_downview"
            android:layout_width="@dimen/widgeheight"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_back"
            android:clickable="true"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/im_downview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_chatroom_menu"
                />
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/ll_GPSdownview"
            android:layout_width="@dimen/widgeheight"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_back"
            android:clickable="true"
            android:gravity="center"
            android:layout_alignBottom="@+id/left"
            android:visibility="gone"
            android:orientation="horizontal" >

           <ImageView
                android:id="@+id/tag_img_menu"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/top_rightmenu" />
        </LinearLayout>

        
    </RelativeLayout>

</RelativeLayout>