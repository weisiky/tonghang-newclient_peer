<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    <RelativeLayout 
        android:layout_height="@dimen/margintopsize_middle"
        android:layout_width="match_parent"
        android:id="@+id/ll_clike"
        android:background="@drawable/select_personal" 
        >
        <ImageView
            android:id="@+id/im_headpic"
            android:layout_width="@dimen/widgeheight"
            android:layout_height="@dimen/widgeheight"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/mini_avatar_shadow"
             />
        
        <TextView 
	        android:id="@+id/tv_nikename"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"	        
	        android:textSize="@dimen/textsize_middle"
	        android:text="xiao8同学"
	        android:textColor="@color/black"
	        android:layout_toRightOf="@+id/im_headpic"
	        android:layout_marginLeft="8dp"
	        android:layout_marginTop="12dp"
	        />
        
        <TextView 
	        android:id="@+id/tv_date"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"	        
	        android:textSize="@dimen/textsize_middle"
	        android:text="2015-12-01"
	        android:textColor="@color/new_gray_view"
	        android:layout_toRightOf="@+id/tv_nikename"
	        android:layout_alignBottom="@+id/tv_nikename"
	        android:layout_marginLeft="16dp"
	        />
        
        <TextView
	        android:id="@+id/tv_descripe"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="@dimen/textsize_small"
	        android:textColor="@color/deepgray"
	       	android:text="同意与您交换名片"
			android:layout_alignLeft="@+id/tv_nikename"
			android:layout_below="@+id/tv_nikename"
			android:layout_marginTop="8dp"
	        />
        
        
        <TextView
	        android:id="@+id/tv_access"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:background="@drawable/selector_back"
	        android:clickable="true"
	        android:paddingBottom="4dp"
	        android:paddingLeft="8dp"
	        android:paddingRight="8dp"
	        android:paddingTop="4dp"
	        android:layout_marginRight="8dp"
	        android:text="同意"
	        android:textColor="@color/white"
	        android:textSize="@dimen/textsize_middle" />
    
    </RelativeLayout>
    <View 
	    android:background="@color/lightgray"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        />

</LinearLayout>
