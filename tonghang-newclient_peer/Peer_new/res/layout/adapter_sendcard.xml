<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:orientation="vertical" 
        android:layout_width="match_parent"
        android:layout_height="64dp" 
        android:id="@+id/ll_card"
        android:clickable="true" 
        android:background="@drawable/selector_presseffect"         
        >
    <RelativeLayout
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/im_cardpic"
            android:layout_width="@dimen/widgeheight_middle"
            android:layout_height="@dimen/widgeheight_middle"
            android:layout_alignParentLeft="true"
            android:src="@drawable/card"
            android:layout_marginLeft="8dp"
            
             />
	<LinearLayout
	    android:layout_marginLeft="8dp"
	    android:orientation="vertical"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_toRightOf="@+id/im_cardpic" 
	    android:layout_marginRight="8dp"
	    >
	    <RelativeLayout 
	        android:layout_width="match_parent"
	    	android:layout_height="match_parent"
	        >
	    <TextView 
	        android:id="@+id/tv_cardnike"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textSize="@dimen/textsize_large"
	        android:textColor="@color/black"
	        android:text="交换名片"
	        android:layout_marginTop="4dp"
	        />

	    <TextView
	        android:id="@+id/tv_carddescripe"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:layout_alignParentLeft="true"
	        android:lines="1"
	        android:ellipsize="end"
	        android:textSize="@dimen/textsize_smallmiddle"
	        android:textColor="@color/deepgray"
	        android:layout_marginBottom="4dp"
	        />

	</RelativeLayout>	
	</LinearLayout>
    </RelativeLayout>
    </LinearLayout>
	<View 
	    android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        />
    
    
    

</LinearLayout>
